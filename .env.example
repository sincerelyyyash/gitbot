
GITHUB_APP_ID=
GITHUB_PRIVATE_KEY=
GITHUB_WEBHOOK_SECRET=

GEMINI_API_KEY=

ENV=development


LOG_LEVEL=INFO

# Storage Configuration
# Base directory for all data storage (default: ./data)
DATA_DIR=./data

# ChromaDB persistence directory (default: {DATA_DIR}/chroma)
CHROMADB_PERSIST_DIR=

# Quota persistence directory (default: {DATA_DIR}/quota)
QUOTA_PERSIST_DIR=

# Rate Limiting Configuration
# Daily token limit for Gemini API (default: 1,000,000)
DAILY_TOKEN_LIMIT=1000000

# API requests per minute (default: 60)
REQUESTS_PER_MINUTE=30

# GitHub API retry configuration
GITHUB_MAX_RETRIES=3
GITHUB_BASE_DELAY=2.0
GITHUB_MAX_DELAY=60.0

# Content Processing
# Size of text chunks for RAG system (default: 1024)
CHUNK_SIZE=1024

CHUNK_OVERLAP=128

MAX_FILE_SIZE=1048576


MAX_FILES=500


HOST=0.0.0.0

PORT=8050

WORKERS=1

CORS_ORIGINS=["*"]

# Optional admin token for protected endpoints
ADMIN_TOKEN=

# Monitoring Configuration
# Enable Prometheus metrics (default: false)
ENABLE_METRICS=false

# Port for metrics server (default: 9090)
METRICS_PORT=9090
